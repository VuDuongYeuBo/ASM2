<!DOCTYPE html>
<html lang="en">
<!-- divinectorweb.com -->

<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Responsive Product Card bootstrap 5</title>
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.1/css/bootstrap.min.css">
   <link rel="stylesheet" href="style.css">
</head>

<body>
   {{#each toys }}
   <div class="products">
      <div class="container">
         <div class="row card-deck">
            <div class="col-lg-4">
               <div class="card">
                  <img src="{{ image }}" class="card-img-top" alt="Product 1">
                  <div class="card-body">
                     <h5 class="name">{{ name }}</h5>
                     <p class="card-text">{{ detail }}</p>
                     <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                           <form action="/order" method="post">
                              <input type="hidden" name="name" value="{{name}}">
                              <input type="hidden" name="price" value="{{price}}">
                              <input class="form-control mb-3" type="number" name="order_quantity" min="1"
                                 max="{{quantity}}">
                              <input class="btn btn-danger" type="submit" value="Order">
                           </form>
                        </div>
                        <span class="price">${{ price }}</span>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
      {{/each}}
</body>

</html>