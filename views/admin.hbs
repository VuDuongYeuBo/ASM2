{{!-- table.table-primary.text-center.bg-light.mt-3.mb-3>tr*3>th*8 --}}
<table class="table table-primary text-center bg-light mt-3 mb-3">
   <tr>
      <th class="h1 text text-danger" colspan="7">Product List ({{ total }})</th>
       <th>
         <a class="btn btn-success" href="/add">Add</a>
         <a class="btn btn-danger" href="/drop" onclick="return confirm('Are you sure to delete all toys ?');">Drop</a>
      </th>
</tr> 
   <tr class="cot">
      <th>Name</th>
      <th>Brand</th>
      <th>Detail</th>
      <th>Quantity</th>
      <th>Image</th>
      <th>Price</th>
      <th>Video</th>
      <th style="color:brown">Menu</th>
   </tr>
   {{#each toys }}
   <tr>
      <th>{{ name }}</th>
      <th>{{ brand }}</th>
      <th>{{ detail }}</th>
      <th>{{ quantity }}</th>
      <th>
         <img width="300" height="200" src="{{ image }}">
      </th>
      <th>${{ price }}</th>
      <th>
         <iframe src="https://www.youtube.com/embed/{{ video }}" width="300" height="200"></iframe>
      </th>
      <th>
         <a class="btn btn-warning" href="/edit/{{_id}}">Edit</a>
         <a class="btn btn-danger" href="/delete/{{_id}}"
            onclick="return confirm('Are you sure to delete this mobile ?');">Delete</a>
      </th>
   </tr>
   {{/each}}
</table>